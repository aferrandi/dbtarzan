export IVY=/home/andrea/.ivy2/cache
rm deploy/*.jar
cp "$(ls -t $IVY/org.scala-lang/scala-library/jars/* | head -1)" deploy
cp "$(ls -t $IVY/org.scala-lang/scala-reflect/jars/* | head -1)" deploy
cp "$(ls -t $IVY/org.scalafx/scalafx_2.11/jars/scalafx_2.11-8.* | head -1)" deploy
cp "$(ls -t $IVY/com.typesafe.akka/akka-actor_2.11/jars/* | head -1)" deploy
cp "$(ls -t $IVY/com.typesafe/config/bundles/* | head -1)" deploy
cp "$(ls -t $IVY/io.spray/spray-json_2.11/bundles/* | head -1)" deploy
cp "$(ls -t $IVY/org.apache.derby/derby/jars/* | head -1)" deploy

javafxpackager -createjar -appclass dbtarzan.gui.Main -srcdir target/scala-2.11/classes/ -classpath "akka-actor_2.11-2.3.6.jar;akka-stream-experimental_;2.11-0.9.jar;config-1.2.1.jar;reactive-streams-0.4.0.M2.jar;scalafx_2.11-8.0.20-R6.jar;scala-library-2.11.2.jar;pray-json_2.11-1.3.1.jar" -outdir deploy -outfile dbtarzan -v
             
rm dbTarzan.zip
cd deploy       
zip dbTarzan * -x derby\*.jar \*.log firstdb\*
cd ..
